<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.tooltip.Tooltip" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Tooltip</name>
    <description>Add tooltip to a user defined text, image or link</description>
    <icon></icon>
    <properties>
        <!-- enum for choosing tooltip type -->
        <property key="tooltipType" type="enumeration" defaultValue="linkTooltip">
            <caption>Tooltip type</caption>
            <category>Appearance</category>
            <description>type of tooltip</description>
            <enumerationValues>
                <enumerationValue key="linkTooltip">Link tooltip</enumerationValue>
                <enumerationValue key="imageTooltip">Image tooltip</enumerationValue>
                <enumerationValue key="webpageTooltip">Webpage tooltip</enumerationValue> 
                <!-- Mendix Page is shown on hover -->
            </enumerationValues>
        </property>
        <!-- for the tooltip link -->
        <property key="linktext" type="attribute" required="false" defaultValue="">
            <caption>Message</caption>
            <category>Data source</category>
            <description>Text of the link</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="tooltipText" type="attribute" required="false" defaultValue="">
            <caption>Tooltip text</caption>
            <category>Data source</category>
            <description>Text to display on the tooltip</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <!-- for the image-->
        <property key="imageUrl" type="attribute" required="false" defaultValue="">
            <caption>Image URL</caption>
            <category>Data source</category>
            <description>Link of image to display for example http://image.io/x.jpg</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="imageTooltip" type="attribute" required="false" defaultValue="">
            <caption>Image tooltip</caption>
            <category>Data source</category>
            <description>Text to display on the tooltip, can as well be the URL</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        
        <!-- website tooltip-->
        <property key="reference" type="attribute" required="false" defaultValue="">
            <caption>Website name</caption>
            <category>Data source</category>
            <description>Name to reference the website</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>

        <property key="websiteURL" type="attribute" required="false" defaultValue="">
            <caption>Website URL</caption>
            <category>Data source</category>
            <description>For example: www.example.com</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <!-- for tooltip position-->
        <property key="tooltipPosition" type="enumeration" defaultValue="top">
            <caption>Tooltip position</caption>
            <category>Appearance</category>
            <description>Position to display the tooltip</description>
            <enumerationValues>
                <enumerationValue key="top">top</enumerationValue>
                <enumerationValue key="right">right</enumerationValue>
                <enumerationValue key="bottom">bottom</enumerationValue>
                <enumerationValue key="left">left</enumerationValue>
            </enumerationValues>
        </property>
        
        <!-- the bootstrap style of the tooltip -->
        <property key="bootstrapStyle" type="enumeration" defaultValue="dark">
            <caption>Style</caption>
            <category>Appearance</category>
            <description>Style to display the tooltip</description>
            <enumerationValues>
                <enumerationValue key="dark">dark</enumerationValue>
                <enumerationValue key="success">success</enumerationValue>
                <enumerationValue key="warning">warning</enumerationValue>
                <enumerationValue key="error">error</enumerationValue>
                <enumerationValue key="info">info</enumerationValue>
                <enumerationValue key="light">light</enumerationValue>
            </enumerationValues>
        </property>
        <!-- effect on the tooltip -->
        <property key="bootstrapEffect" type="enumeration" defaultValue="float">
            <caption>Effect</caption>
            <category>Appearance</category>
            <description>Effect for the tooltip</description>
            <enumerationValues>
                <enumerationValue key="float">float</enumerationValue>
                <enumerationValue key="solid">solid</enumerationValue>
            </enumerationValues>
        </property>

        <!-- Behaviour -->
        <property key="callMicroflow" type="microflow" required="false" defaultValue="">
            <caption>Microflow</caption>
            <category>Behavior</category>
            <description>Microflow to execute on click</description>
            <returnType type="Void"></returnType>
        </property>
        <property key="callNanoflow" type="nanoflow" required="false" defaultValue="">
            <caption>Nanoflow</caption>
            <category>Behavior</category>
            <description>Nanoflow to execute on click</description>
            <returnType type="Void"></returnType>
        </property>
    </properties>
</widget>
