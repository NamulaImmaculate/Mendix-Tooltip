<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.tooltip.Tooltip" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Tooltip</name>
    <description>adds a tooltip to a user defined field containing either a text, image or a link.
    </description>
    <icon></icon>
    <properties>
        <property key="tooltipText" type="string">
            <caption>Tooltip text to display</caption>
            <category>Appearance</category>
            <description/>
        </property>

        <property key="tooltipPosition" type="enumeration" defaultValue="below">
            <caption>Tooltip posotion</caption>
            <category>Appearance</category>
            <description>position of tooltip</description>
            <enumerationValues>
                <enumerationValue key="above">Above</enumerationValue>
                <enumerationValue key="after">After</enumerationValue>
                <enumerationValue key="below">Below</enumerationValue>
                <enumerationValue key="before">Before</enumerationValue>
            </enumerationValues>
        </property>

        <property key="linktext" type="string">
            <caption>link text</caption>
            <category>Appearance</category>
            <description>link text</description>
        </property>

        <property key="callMicroflow" type="microflow" required="false" defaultValue="">
            <caption>Microflow</caption>
            <category>Behavior</category>
            <description>Microflow to execute on click</description>
            <returnType type="Boolean"></returnType>
        </property>

        <property key="callNanoflow" type="nanoflow" required="false" defaultValue="">
            <caption>Nanoflow</caption>
            <category>Behavior</category>
            <description>Nanoflow to execute on click</description>
            <returnType type="Boolean"></returnType>
        </property>
    </properties>

</widget>
